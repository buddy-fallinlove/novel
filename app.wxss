
/* 同一行排列 */
.d-f {
  display: flex;
}
.warp {
  width: 1280px;
}

.container {
  display: flex;
  justify-content: center;
}

/* 占比 */
.f1 {
  flex: 1;
}
.f2 {
  flex: 2;
}
/* 垂直居中  水平居中 */
.j-c-c {
  justify-content: center;
}
.a-i-c {
  align-items: center;
}
/* 两边有间距  两边无间距  中间自动等分*/
.j-c-s-a {
  justify-content: space-around;
}
.j-c-s-b {
  justify-content: space-between;
}
/* 换行 */
.f-w-w {
  flex-wrap: wrap;
}
/* 内容不换行 */
.w-s-n {
  white-space: nowrap;
}
/* 超出部分隐藏 */
.o-h {
  overflow: hidden;
}
/* 超出部分显示省略号 */
.t-e-n {
  text-emphasis: none
}
/* 同一行竖向排列 */
.f-d-c {
  display: flex;
  flex-direction: column;
}
/* 悬浮小手 */
.h-c-p {
  cursor: pointer;
}
/* 外边距margin 上下左右4个方向*/
.m1 {
  margin: 10px;
}
.m2 {
  margin: 20px;
}
.m3 {
  margin: 30px;
}
/* 上边距margin：top */
.m-t1 {
  margin-top: 10px;
}
.m-t2 {
  margin-top: 20px;
}
.m-t3 {
  margin-top: 30px;
}
/* 下边距margin：bottom */
.m-b1 {
  margin-bottom: 10px;
}
.m-b2 {
  margin-bottom: 20px;
}
.m-b3 {
  margin-bottom: 30px;
}
/* 左边距margin：left */
.m-l1 {
  margin-left: 10px;
}
.m-l2 {
  margin-left: 20px;
}
.m-l3 {
  margin-left: 30px;
}
/* 右边距margin：right */
.m-r1 {
  margin-right: 10px;
}
.m-r2 {
  margin-right: 20px;
}
.m-r3 {
  margin-right: 30px;
}
/* 内边距padding-top bottom left right上下左右4个方向 */
.p1 {
  padding: 10px;
}
.p2 {
  padding: 20px;
}
.p3 {
  padding: 30px;
}
/* 边框实线border-solid */
.b-s-r {
  border: 1px solid red;
}
/* 边框虚线border-dashed */
.b-d-r {
  border: 1px dashed red;
}
/* 背景颜色 */
.b-c-r {
  background-color: red;
}
.b-c-b {
  background-color: black;
}
.b-c-c {
  background-color: #ccc;
}
.b-c-c {
  background-color: #fff;
}
/* 字体大小 */
.f-s12 {
  font-size: 12px;
}
.f-s14 {
  font-size: 14px;
}
.f-s18 {
  font-size: 18px;
}
.f-s20 {
  font-size: 20px;
}
.f-s22 {
  font-size: 22px;
}
.f-s24 {
  font-size: 24px;
}
/* 字体加粗 */
.f-w {
  font-weight: 700;
}
/* 隐藏上下左右边框 */
.b-t-n {
  border-top: none;
}
.b-b-n {
  border-bottom: none;
}
.b-l-n {
  border-left: none;
}
.b-r-n {
  border-right: none;
}
/* 圆50% */
.b-r {
  border-radius: 50%;
